<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8">
    <title>
        {% block title %}Welcome!{% endblock %}
    </title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>

<body
    {# Set the right class with app.request.get #}
    {% if app.request.get('_route') == 'home' %}
        class="body__home"
    {% elseif app.request.get('_route') == 'last_work' %}
        class="body__last__work"
    {% endif %}>

    {% include "./base/header.html.twig" %}

    {% block body %}
    {% endblock %}

    {% include "./base/footer.html.twig" %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</body>

</html>
